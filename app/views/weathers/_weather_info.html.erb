<!-- City Info Card -->
<div class="col-sm-4">
  <div class="card" style="width: 20rem;">
    <img class="card-img-top" src="<%= gmap_home_thumb(@weather) %>" alt="Card image cap">
    <div class="card-block">
      <h4 class="card-title"><%= @weather[:place_name] %></h4>
      <p class="card-text">
        <strong>Latitude: </strong><%= @weather[:latitude] %><br />
        <strong>Longitude: </strong><%= @weather[:longitude] %><br />
        <br />
        <strong>Weather Temp Min: </strong><%= @weather[:temp_min].to_s[0..1] %>ยบ C<br />
        <strong>Weather Temp Max: </strong><%= @weather[:temp_max].to_s[0..1] %>ยบ C<br />
        <br />
        <strong>Humdity: </strong><%= @weather[:humidity] %><br />
        <strong>Pressure: </strong><%= @weather[:pressure] %> Pa<br />
        <strong>Wind Speed: </strong><%= @weather[:wind_speed] %> km/h<br />
      </p>
    </div>
  </div>
</div>
